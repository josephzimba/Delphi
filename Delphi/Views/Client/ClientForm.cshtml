@model Delphi.ViewModel.ClientFormViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Client</h2>
@using (Html.BeginForm("Save", "Client"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Client.Name)
        @Html.TextBoxFor(m => m.Client.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.PhoneNumber)
        @Html.TextBoxFor(m => m.Client.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.PhoneNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.Contact)
        @Html.TextBoxFor(m => m.Client.Contact, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.Contact)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.Address)
        @Html.TextBoxFor(m => m.Client.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Client.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Client.StatusId)

        @Html.DropDownListFor(m => m.Client.StatusId, new SelectList(Model.Status, "Id", "Name"), "Select Status", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Client.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
